@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Listesi</h4>
            <div class="table-responsive">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1"><img src="@item.ImageUrl" alt="image" /></td>
                                    <td>@item.Title</td>
                                    <td><a href="/Image/DeleteImage/@item.ImageId" class="btn btn-danger me-2">Sil</a></td>
                                    <td><a href="/Image/EditImage/@item.ImageId" class="btn btn-success me-2">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        Görsel Listesinde hiçbir görsel bulunamamıştır!
                    </div>
                }
                <br />
                <a href="/Image/AddImage" class="btn btn-primary me-2">Yeni Görsel Girişi</a>
            </div>
        </div>
    </div>
</div>
@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementId</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-danger me-2">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementId" class="btn btn-success me-2">Güncelle</a></td>
                                <td>
                                    @if (item.Status == true)
                                    {
                                        <a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementId" class="btn btn-secondary me-2">Pasif Yap</a>
                                    }
                                    else
                                    {
                                        <a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementId" class="btn btn-warning me-2">Aktif Yap</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement" class="btn btn-primary me-2">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>




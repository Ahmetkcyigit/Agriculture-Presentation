@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Listesi</h4>

            <div class="table-responsive">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Ad</th>
                                <th>Görev</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td>@item.TeamId</td>
                                    <td>@item.PersonName</td>
                                    <td>@item.Title</td>
                                    <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-danger me-2">Sil</a></td>
                                    <td><a href="/Team/EditTeam/@item.TeamId" class="btn btn-success me-2">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        Takım Listesinde hiçbir personel bulunamamıştır!
                    </div>
                }
                <br />
                <a href="/Team/AddTeam" class="btn btn-primary me-2">Yeni Personel Girişi</a>
            </div>
        </div>
    </div>
</div>

